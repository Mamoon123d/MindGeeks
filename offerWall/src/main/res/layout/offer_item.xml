<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offer_card"
    app:contentPaddingBottom="3dp"
    app:contentPaddingTop="3dp"
    app:cardUseCompatPadding="true"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upto"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
                />

        <TextView
            android:id="@+id/reward_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:text="00"
            android:textAlignment="center"
            android:maxLines="1"
            android:textColor="#fff"
            android:background="#2962FF"
            android:textStyle="bold"
            android:textSize="16sp" />


        </LinearLayout>
        <ImageView
            android:id="@+id/app_image"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:contentDescription="image" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="description"
            android:lines="2"
            android:maxLength="50"
            android:ellipsize="end"
            android:layout_below="@id/title_tv"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/app_image"
            />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/app_image"
           />


    </RelativeLayout>

</androidx.cardview.widget.CardView>